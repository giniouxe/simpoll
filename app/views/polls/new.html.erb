<h2>Nouveau sondage</h2>

<%= form_for Poll.new do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :author %><br>
  <%= f.text_field :author %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :field %><br>
  <%= f.text_area :field %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>

<%= link_to 'annuler', polls_path %>  
